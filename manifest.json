{
  "manifest_version": 3,
  "name": "Proxy Scraper y Gestor",
  "version": "1.0.2",
  "description": "Obtiene y verifica proxies HTTP para eludir restricciones",
  "author": "Rodrigo Droguett Stahr",
  "homepage_url": "https://github.com/fvnks/proxy-scraper-extension",
  "permissions": [
    "proxy",
    "storage",
    "alarms",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "js/loader.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "update_url": "https://raw.githubusercontent.com/fvnks/proxy-scraper-extension/main/updates.xml"
} 